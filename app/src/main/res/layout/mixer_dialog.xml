                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/mixer_margin"
                            android:gravity="center"
                            android:text="(14000hz)"
                            android:textColor="@color/mixer_inside_text" />
                    </LinearLayout>
                </LinearLayout>

