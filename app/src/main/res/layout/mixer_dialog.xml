                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="bar bass"
                            android:textColor="@color/mixer_inside_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/mixer_margin"
                            android:gravity="center"
                            android:text="(60hz)"
                            android:textColor="@color/mixer_inside_text" />

                    </LinearLayout>

                    <LinearLayout
